<?xml version="1.0" encoding="utf-8" ?>

<data>
    <include id="_ui_globals"/>

    <definition id="button" width="740" height="25">
        <text use_def="sans12c" color="0xffffff">
            <color id="over" value="0xffff00" />
        </text>
    </definition>

    <text id="title" use_def="sans16c" x="30" y="30" width="740" text="{title}">
        <anchor x="30" x-flush="left" y="30" y-flush="top" />
    </text>
    
    <text id="flavor" use_def="sans12c" x="30" y="60" width="740" text="{flavor}">
        <anchor x="30" x-flush="left" y="60" y-flush="top" />
    </text>

    <button id="btn0" use_def="button" x="30" y="400" width="740" label="{outcome0}">
        <anchor y="400" y-flush="top"/>
        <param type="int" value="0"/>
    </button>

    <button id="btn1" use_def="button" x="30" y="430" width="740" label="{outcome1}">
        <anchor y="400" y-flush="top"/>
        <param type="int" value="1"/>
    </button>
</data>
