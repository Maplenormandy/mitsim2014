<?xml version="1.0" encoding="utf-8" ?>

<data>
  <include id="_ui_globals"/>

  <definition id="button" width="300" height="25">
    <text use_def="sans12c" color="0xffffff">
      <color id="over" value="0xffff00" />
    </text>
  </definition>

  <sprite id="black" x="0" y="0" width="100%" height="100%" color="0x88000000"/>

  <chrome id="back" src="ui/chrome/dark_grey" slice9="4,4,8,8" center_x="true" center_y="true" width="400" height="400"/>   

  <text id="title" use_def="sans16c" x="0" y="10" width="back.width" text="{title}">
    <anchor x="back.left" x-flush="left" y="back.top" y-flush="top"/>
  </text>

  <text id="flavor" use_def="sans12c" x="0" y="60" width="back.width" text="{flavor}">
    <anchor x="back.left" x-flush="left" y="back.top" y-flush="top"/>
  </text>

  <button id="btn0" use_def="button" x="50" y="-200"  label="{outcome0}">
    <anchor y="back.bottom" y-flush="botom" x="back.left" x-flush="left"/>
    <param type="int" value="0"/>
  </button>

  <button id="btn1" use_def="button" x="50" y="-230" label="{outcome1}">
    <anchor y="back.bottom" y-flush="botom" x="back.left" x-flush="left"/>
    <param type="int" value="1"/>
  </button>

  <button id="btn2" use_def="button" x="50" y="-260" label="{outcome2}">
    <anchor y="back.bottom" y-flush="botom" x="back.left" x-flush="left"/>
    <param type="int" value="2"/>
  </button>

  <button id="btn3" use_def="button" x="50" y="-290" label="{outcome3}">
    <anchor y="back.bottom" y-flush="botom" x="back.left" x-flush="left"/>
    <param type="int" value="3"/>
  </button>

  <text id="effect_text" align="center" use_def="sans12c" width="back.width" y="-100"  text="">
    <anchor y="back.bottom" y-flush="back.botom" x="back.left" x-flush="left"/>
  </text>

  <mode id="choice_1" default="true">
    <show id="btn0" />
    <hide id="btn1,btn2,btn3" />
  </mode>
  <mode id="choice_2">
    <show id="btn0,btn1" />
    <hide id="btn2,btn3" />
  </mode>
  <mode id="choice_3">
    <show id="btn0,btn1,btn2" />
    <hide id="btn3" />
  </mode>
  <mode id="choice_4">
    <show id="btn0,btn1,btn2,btn3" />
  </mode>
</data>
